{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "publish-release-x64",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "publish",
                "./DS4Windows/DS4WinWPF.csproj",
                "-c", "Release",
                "/p:platform=x64",
                "-o", "./DS4Windows/bin/x64/Release/net8.0-windows"
            ],
            "group": "build"
        },
        {
            "label": "post-build-x64",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-Command",
                "$v=(Select-String -Path \"./Directory.Build.props\" -Pattern \"<Version>(.*?)</Version>\" -AllMatches).Matches.Groups[1].Value; if (-not $v) { Write-Error \"Version not found in Directory.Build.props\"; exit 1 }; python ./utils/post-build.py \"./DS4Windows/bin/x64/Release/net8.0-windows\" \".\" $v"
            ],
            "group": "build",
            "dependsOn": "publish-release-x64"
        },
        {
            "label": "build-release-like-github-x64",
            "dependsOrder": "sequence",
            "dependsOn": [
                "publish-release-x64",
                "post-build-x64"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}